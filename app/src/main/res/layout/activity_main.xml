<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".presentation.MainActivity">

  <com.google.android.material.button.MaterialButton
      android:id="@+id/btn_native"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="24dp"
      android:layout_marginStart="24dp"
      android:paddingBottom="16dp"
      android:paddingTop="16dp"
      android:text="@string/btn_start_native"
      android:textColor="@color/white"
      android:textSize="14sp"
      app:backgroundTint="?attr/colorPrimary"
      app:layout_constraintBottom_toTopOf="@id/btn_flutter"
      app:layout_constraintTop_toTopOf="parent"
      app:rippleColor="?attr/colorSecondary" />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/btn_flutter"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="24dp"
      android:layout_marginStart="24dp"
      android:paddingBottom="16dp"
      android:paddingTop="16dp"
      android:text="@string/btn_start_flutter"
      android:textColor="@color/white"
      android:textSize="14sp"
      app:backgroundTint="?attr/colorPrimary"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toBottomOf="@id/btn_native"
      app:rippleColor="?attr/colorSecondary" />
</androidx.constraintlayout.widget.ConstraintLayout>